      allow delete: if true;
    }

    match /{path=**}/exercises/{document} {
      allow read: if true;
    }


    match /users/{parent}/stands/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /{path=**}/stands/{document} {
